// Базовые классы (для тэгов)

@import "../core/variables.styl";

* {
	box-sizing: border-box;
	-webkit-tap-highlight-color: transparent;

	&:before,
	&:after {
		box-sizing: border-box;
	}
}

html {
	font-size: 10px;
	overflow-x: hidden;
  +media(1024px) {
    font-size: 6px;
  }
  +media(768px) {
    font-size: 4px;
  }
  +media(420px) {
    font-size: 3px;
  }
}

body {
	font: 1.6rem/1.5 $fontPrimary;
  background $bg
}

a, button, input{
	&:focus{
		outline: 0;
	}
}

h2{
  color $heading
  margin 0
  font-size 2.4rem
  font-weight 700
  line-height 4.983rem
}

p {
  color $grey
  font-size 1.5rem
  font-weight 400
  line-height 2.3rem
  margin 0
}

[type="text/template"] {
	display: none;
}

img{
  width 100%
  height auto
}