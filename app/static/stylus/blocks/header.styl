@import '../core/variables.styl';

.header
  height $heightHeader

  &--container
    height $heightHeader
    padding-top 6.2rem

  &--img
    width auto
    height 5.2rem

  &--logo
    display block
    width 15.4rem
    height auto
    box-sizing: content-box

  &--heading
    position absolute
    left -4.3rem
    right 0
    margin 0 auto
    position absolute
    top 15.4rem
    width 22.1rem
    height 11.8rem